	<install>
		<queries>
			<query>
				CREATE TABLE IF NOT EXISTS `#__gmaps_category` ( `id`
				int(11) NOT NULL auto_increment, `name` varchar(30) NOT
				NULL, `icon` varchar(30) NULL, PRIMARY KEY (`id`) )
				TYPE=MyISAM;
			</query>
			<query>
				CREATE TABLE IF NOT EXISTS `#__gmaps_maps` ( `id`
				int(11) NOT NULL auto_increment, `title` varchar(100)
				NOT NULL, `description` text NOT NULL, `overlay1`
				int(11) NOT NULL, `overlay2` int(11) NOT NULL,
				`overlay3` int(11) NOT NULL, `overlay4` int(11) NOT
				NULL, `overlay5` int(11) NOT NULL, `properties` text,
				PRIMARY KEY (`id`) ) TYPE=MyISAM;
			</query>
			<query>
				CREATE TABLE IF NOT EXISTS `#__gmaps_markers` ( `id`
				int(11) NOT NULL auto_increment, `name` varchar(50) NOT
				NULL, `latitude` varchar(30) NOT NULL, `longitude`
				varchar(30) NOT NULL, `icon` varchar(40) NOT NULL,
				`description` text NOT NULL, `categoryid` int(11),
				PRIMARY KEY (`id`) ) TYPE=MyISAM;
			</query>
			<query>
				CREATE TABLE IF NOT EXISTS `#__gmaps_points` ( `id`
				int(11) NOT NULL auto_increment, `map_id` int(11) NOT
				NULL, `item_id` int(11) NOT NULL, PRIMARY KEY (`id`) )
				TYPE=MyISAM;
			</query>
			<query>
				CREATE TABLE IF NOT EXISTS `#__gmaps_icons` ( `id`
				int(11) not null auto_increment, `icon` varchar(40) NOT
				NULL, `icon_width` int(11) NOT NULL, `icon_height`
				int(11) NOT NULL, PRIMARY KEY (`id`) ) TYPE=MyISAM;
			</query>
			<query>
				alter table `#__gmaps_icons` add unique index (icon)
			</query>
			<!-- 
				<query>
				alter table `#__gmaps_maps` add constraint
				FOREIGN KEY (`id`) 
				REFERENCES `#__gmaps_points (id)` on delete cascade
				</query> 
				<query>
				alter table `#__gmaps_markers` add constraint
				FOREIGN KEY (`id`) 
				REFERENCES `#__gmaps_points` (item_id)
				</query> 
			-->
			<!--   <query>DROP TABLE IF EXISTS `#__gmaps_config`</query>  -->
			<query>
				CREATE TABLE IF NOT EXISTS `#__gmaps_config` (
				`googlekey` varchar(200) NOT NULL, `maptype`
				varchar(20), `zoomtype` varchar(20), `zoom` int(11) NOT
				NULL, `mapwidth` varchar(20), `mapheight` varchar(20),
				`defaulticon` varchar(50) ) TYPE=MyISAM;
			</query>
		</queries>
