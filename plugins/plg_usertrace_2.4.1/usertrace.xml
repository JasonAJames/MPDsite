<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
	<name>Usertrace</name>
	<author>D&#39;Abronzo Vincenzo</author>
	<creationDate>September 2009</creationDate>
	<copyright>(C) D&#39;Abronzo Vincenzo. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>vincenzodabronzo@gmail.com</authorEmail>
	<authorUrl>www.vicenzodabronzo.com</authorUrl>
	<version>2.4.1</version>
	<description>User Trace Plugin</description>
	<files>
		<filename plugin="usertrace">usertrace.php</filename>
	</files>
	<params>
		<param name="maxdays" type="text" default="" label="Number of days unapproved" description="User can be unapproved for at most (Number of days): empty field will not delete any user" />
		<param name="usertype" type="list" default="Registered" label="Type of user to delete" description="Choose which type of user you want to delete">
			<option value="Registered">Registered</option>
			<option value="Author">Author</option>
			<option value="Editor">Editor</option>
			<option value="Publisher">Publisher</option>
			<option value="Manager">Manager</option>
			<option value="Adminsitrator">Administrator</option>
			<option value="Super Administrator">Super Administrator</option>
	  	</param>
	</params>
</install>
