<authorEmail>info@pixelpointcreative.com</authorEmail>
<authorUrl>http://www.pixelpointcreative.com</authorUrl>
<version>1.3</version>
<description>Simple JQuery image rotator with links.</description>

<files>
      	<filename module="mod_ppc_simple_spotlight">mod_ppc_simple_spotlight.php</filename> 
		<filename>mod_ppc_simple_spotlight.xml</filename>
		<folder>img</folder>
		<folder>js</folder>
		<folder>css</folder>	
                <folder>elements</folder>
</files>
<params addpath="/modules/mod_ppc_simple_spotlight/elements">
<param type="logo" default="" ></param>
<param type="spacer" default="&lt;b&gt;General Settings&lt;/b&gt;"></param>
<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="Module Class Suffix"></param>
<param name="width" type="text" default="900" label="Width" description="Specify width" />
<param name="height" type="text" default="110" label="Height" description="Specify  height" />
<param name="auto" type="text" default="5000" label="Display Length" description="Display length in milliseconds. 1000 = 1 second." /> 
<param name="speed" type="text" default="800" label="Animation Speed" description="Animation Speed in milliseconds. 1000 = 1 second." /> 
<param name="easing" type="list" default="linear" label="Animation Type" description="Type of easing effect to use.">
<option value="linear">Linear</option>
<option value="elasin">Elastic In</option>
<option value="elasout">Elastic Out</option>
<option value="elasinout">Elastic In/Out</option>
<option value="bouncein">Bounce In</option>
<option value="bounceout">Bounce Out</option>
<option value="bounceinout">Bounce In/Out</option>
<option value="backin">Back In</option>
<option value="backout">Back Out</option>
<option value="backinout">Back In/Out</option>
</param>
<param name="window" type="radio" default="_blank" label="Link Window" description="Open links in new window or same window?">
<option value="_blank">New Window</option>
<option value="_self">Same Window</option>
</param>
<param name="nav" type="radio" default="1" label="Navigation Buttons" description="Show/Hide Navigation Buttons">
<option value="0">No</option>
<option value="1">Yes</option>
</param>
<param name="@spacer" type="spacer" default="" label="" description="" />
  
