<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0" client="site" method="upgrade">
	<name>XtremeLocator</name>
	<creationDate>02/02/2010</creationDate>
	<author>IQservices Linas Adomavicius</author>
	<authorEmail>linas@iqservices.com</authorEmail>
	<authorUrl>http://www.iqservices.com</authorUrl>
	<copyright>Copyright (C) 2010 IQServices.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>2.0</version>
	<description>DESCMODULXTREMELOCATOR</description>
	<files>
		<filename module="mod_xtremelocator.php">mod_xtremelocator.php</filename>
		<filename>index.html</filename>		
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_xtremelocator.ini</language>
	</languages>
	<media />
	<params>
		<param name="type" type="list" default="standard"
			label="Search type"
			description="Define which type of search form should be displayed.">
			<option value="standard">Standard search form</option>
			<option value="advanced">Advanced search form</option>			
		</param>
		<param name="moduleclass_sfx" type="text" default=""
			label="Module Class Suffix"
			description="A suffix to be applied to the css class of the module (div.moduletable), this allows individual module styling" />
		<param name="advanced" type="list" default="0"
			label="Show advanced search link"
			description="Show advanced search link.">
			<option value="0">No</option>
			<option value="1">Yes</option>			
		</param>
		<param name="list" type="list" default="0"
			label="Show list location link"
			description="Show list location link.">
			<option value="0">No</option>
			<option value="1">Yes</option>			
		</param>
	</params>	
</install>
