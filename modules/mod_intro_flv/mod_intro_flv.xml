	</files>
<params>
	<param name="active" type="radio" default="2" label="Active" description="If you're having problems here, you can choose to temporarily show the output of the module configuration for debugging purposes." >
		<option value="1">Yes</option>
		<option value="2">No</option>
	</param>
		
	<param name="filename" label="File name" type="text" description="filename of flv"  />
	<param name="width" type="text" default="425x" label="Width (px)" description="Movie width (forces all images to be displayed with this width)" />
	<param name="height" type="text" default="350px" label="Height (px)" description="Movie height (forces all images to be displayed with the height)" />
	<param name="description" label="Description" type="text" description="description of player"  />
	<param name="linkname" label="link name" type="text" description="name showed in link"  />
